<% include partials/_header %>

<div class="container">
        <div class="row">
            <div class="col-md-5 offset-md-4">
                <div class="card">
                    <div class="card-body">
                        <form action="/update/<%= radio._id %>" method="POST">
                            <div class="form-group">
                                <p>Nombre:</p>
                                <input type="text" name="nombre" placeholder="Ingrese el nombre de la radio" class="form-control" value="<%= radio.nombre %>">
                            </div>
                            <div class="form-group">
                                <p>Eslogan:</p>
                                <textarea name="eslogan" cols="80" class="form-control" placeholder="Ingrese el eslogan"><%= radio.eslogan %></textarea>
                            </div>
                            <div class="form-group">
                                <p>Canal:</p>
                                <input type="text" name="canal" placeholder="Ingrese el canal de la radio" class="form-control" value="<%= radio.canal %>">
                            </div>
                            <div class="form-group">
                                <p>Nuevo Modular:</p>
                                <input type="radio" name="modular" value="AM"> AM
                                <input type="radio" name="modular" value="FM"> FM
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% include partials/_footer %>